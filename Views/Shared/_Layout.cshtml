<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
  
<body>
    <div class="container">
        @if (ViewData["ShowSideBarBlock"] != null && (bool)ViewData["ShowSideBarBlock"])
        {
            @*Боковое меню*@
            <div class="sidebar">
                <div class="top-button">
                    <a asp-controller="Account" asp-action="Index">
                        <button class="menu-item top-item" id="account">
                            <p>Аккаунт</p>
                            <img src="~/content/images/account/account.png" alt="account" />
                        </button>
                    </a>
                    <hr />
                    <a asp-controller="Setting" asp-action="Index">
                        <button class="menu-item top-item" id="settings">
                            <p>Настройки</p>
                            <img src="~/content/images/account/setting.png" alt="setting" />
                        </button>
                    </a>
                    <hr />
                </div>

                <div class="bottom-button">
                    <hr />
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Authorisation" asp-action="Exite" method="post">
                            <button class="menu-item bottom-item" id="exite">
                                <p>Выход</p>
                                <img src="~/content/images/account/exite.png" alt="exite" />
                            </button>
                        </form>
                    }
                    <hr />
                    <button class="menu-item bottom-item" alt="change_theme" onclick="toggleTheme()"><p>Сменить тему</p></button>
                </div>
            </div>
        }
        
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="/js/change_style.js"></script>
</body>
</html>
