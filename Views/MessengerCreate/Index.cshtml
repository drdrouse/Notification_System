<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/messenger.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="main-data">
            <h1>Мессенджеры</h1>
            <hr />
            @for (int check = 0; check < 2; check++)
            {
                <div class="messenger-button">
                    <button class="messenger-menu" data-target="@check"><p>Здесь будет название</p> </button>
                </div>
                <div id="@check" class="messanger-data-hidden">Скрытая область 1</div>
            }
        </div>
    </div>
    <script src="~/js/messenger.js"></script>
</body>
</html>